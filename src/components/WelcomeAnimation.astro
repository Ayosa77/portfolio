<style>
  /* Overlay de bienvenue sexy */
  #welcome-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, #A476FF, #101010, #A476FF);
    background-size: 200% 200%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    /* Animation de fond en continu et fade out apr√®s 2 secondes */
    animation: backgroundShift 3s ease infinite, fadeOut 1s forwards;
    animation-delay: 0s, 2s;
  }
  
  @keyframes backgroundShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  @keyframes fadeOut {
    0% { opacity: 1; transform: scale(1); }
    100% { opacity: 0; transform: scale(0.9); }
  }
  
  #welcome-overlay p {
    color: #fff;
    font-size: 3rem;
    margin: 0;
    animation: textBounce 1s infinite;
  }
  
  @keyframes textBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
</style>

<div id="welcome-overlay">
  <p>Bienvenue</p>
</div>

<script>
  const overlay = document.getElementById('welcome-overlay');
  overlay.addEventListener('animationend', (e) => {
    if (e.animationName === 'fadeOut') {
      overlay.remove();
    }
  });
</script>
