---
const imageSrc = "/photo_pro.JPG"; // Assure-toi que l‚Äôimage est bien dans /public
---

<style>
  /* Overlay de bienvenue styl√© */
  #welcome-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, rgba(164, 118, 255, 0.9), rgba(16, 16, 16, 0.9));
    background-size: 200% 200%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    animation: fadeOut 1s forwards;
    animation-delay: 3s;
  }

  @keyframes fadeOut {
    0% { opacity: 1; transform: scale(1); }
    100% { opacity: 0; transform: scale(0.9); display: none; }
  }

  /* üìç Agrandissement du cercle */
  #welcome-overlay .profile-container {
    position: relative;
    width: 280px; /* Taille ajust√©e pour mieux afficher l‚Äôimage */
    height: 280px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, #A476FF, #6C42B5);
    box-shadow: 0 0 30px rgba(164, 118, 255, 0.7);
    animation: pulseGlow 2s infinite alternate ease-in-out;
    overflow: hidden;
  }

  /* Effet de glow pulsant */
  @keyframes pulseGlow {
    0% { box-shadow: 0 0 20px rgba(164, 118, 255, 0.4); }
    100% { box-shadow: 0 0 40px rgba(164, 118, 255, 1); }
  }

  /* üìç Ajustement du cadrage */
  #welcome-overlay img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* S‚Äôassure que toute la photo soit visible */
    object-position: center; /* Centre bien l‚Äôimage */
    border-radius: 50%;
    border: 8px solid white;
    animation: fadeInScale 1.5s ease-in-out;
  }

  @keyframes fadeInScale {
    0% { opacity: 0; transform: scale(0.8); }
    100% { opacity: 1; transform: scale(1); }
  }

  /* Animation du texte */
  #welcome-overlay p {
    color: #fff;
    font-size: 2.5rem;
    margin-top: 1rem;
    text-align: center;
    font-weight: bold;
    animation: textBounce 1s infinite;
  }

  @keyframes textBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }
</style>

<div id="welcome-overlay">
  <div class="profile-container">
    <img src={imageSrc} alt="Photo Professionnelle de Ayoub" />
  </div>
  <p>Bienvenue</p>
</div>

<script>
  const overlay = document.getElementById('welcome-overlay');
  overlay.addEventListener('animationend', (e) => {
    if (e.animationName === 'fadeOut') {
      overlay.remove();
    }
  });
</script>
